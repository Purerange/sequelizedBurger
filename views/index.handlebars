<div class="container text-center">
    <h1 id="main-title" class="my-3">Eat Da Burger!</h1>

    <div class="row">
        <div class="col-6">
            <h2 id="available">Available Burgers</h2>

            <ul id="available-list" class="text-left">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="eat-btn btn" data-id="{{id}}">DEVOUR!</button>
                </li>{{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h2 id="devoured">Devoured Burgers</h2>

            <ul id="devoured-list" class="text-left">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <h2 id="form-title">Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="burger-input">Burger Name:</label>
            <input type="text" id="burger-input" name="name">
        </div>

        <button type="submit" class="btn btn-info">Add Burger</button>
    </form>
</div>